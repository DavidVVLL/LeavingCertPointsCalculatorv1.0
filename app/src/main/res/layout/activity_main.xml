<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/resultsTV"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <!--<com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="369dp"
            android:layout_height="116dp"
            app:adSize="SMART_BANNER"
            app:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.gms.ads.AdView>-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/acBtn"
            style="@style/buttonNumber"
            android:fontFamily="monospace"
            android:hapticFeedbackEnabled="true"
            android:text="Start Over"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/H1Btn"
            style="@style/buttonNumber"

            android:text="H1 90-100%" />
        <Button
            android:id="@+id/H2Btn"
            style="@style/buttonNumber"

            android:text="H2 80-89%"/>
        <Button
            android:id="@+id/H3Btn"
            style="@style/buttonNumber"
            android:text="H3 70-79%" />
        <Button
            android:id="@+id/H4Btn"
            style="@style/buttonNumber"
            android:text="H4 60-69%"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/H5Btn"
            style="@style/buttonNumber"
            android:text="H5 50-59%"/>
        <Button
            android:id="@+id/H6Btn"
            style="@style/buttonNumber"
            android:text="H6 40-49%"/>
        <Button
            android:id="@+id/H7Btn"
            style="@style/buttonNumber"
            android:text="H7 30-39%" />
        <Button
            android:id="@+id/O1Btn"
            style="@style/buttonNumber"
            android:text="O1 90-100%"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:id="@+id/O2Btn"
            android:text="O2 80-89%"/>
        <Button
            android:id="@+id/O3Btn"
            style="@style/buttonNumber"
            android:text="O3 70-79%"/>

        <Button
            android:id="@+id/O4Btn"
            style="@style/buttonNumber"
            android:text="O4 60-69%"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/O5Btn"
            style="@style/buttonNumber"
            android:text="O5 50-59%"/>

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/O6Btn"
            style="@style/buttonNumber2"
            android:text="O6 40-49%"
            tools:ignore="TextContrastCheck" />
        <Button
            android:id="@+id/O7Btn"
            style="@style/buttonNumber2"
            android:text="O7 30-39%"/>
        <Button
            android:id="@+id/plus25Btn"
            style="@style/buttonNumber2"
            android:text="+25"/>
        <Button
            android:id="@+id/distBtn"
            style="@style/buttonNumber3"
            android:text="Distinction"/>
        <Button
            android:id="@+id/meritBtn"
            style="@style/buttonNumber2"
            android:text="Merit"/>
        <Button
            android:id="@+id/PassBtn"
            style="@style/buttonNumber2"
            android:text="Pass"/>


    </LinearLayout>



</LinearLayout>